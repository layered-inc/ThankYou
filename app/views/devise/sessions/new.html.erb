<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h2>ログイン</h2>

      <hr>
      <%= link_to image_tag('sign_in_with_slack.png', { :border => '0', :alt => '新規登録' }), user_slack_omniauth_authorize_path %>
      <hr>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label 'Eメール' %><br/>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Eメール', autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label 'パスワード' %><br/>
          <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード', autocomplete: 'off' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label 'ログイン情報を記憶させますか？', for: 'user_remember_me' %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit 'ログイン', class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render 'devise/shared/links' %>

    </div>
  </div>
</div>

<div class="row">
  <p class="copyright pull-right" style="margin-top: 100px;">
    ※ 背景はすべてのメッセージによる日本語解析の結果
  </p>
</div>
